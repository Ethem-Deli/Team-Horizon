@using FamilyBudgetExpenseTracker.Models

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <div class="fw-semibold">@((Expense?.Description ?? "Expense"))</div>
                <div class="text-muted small">@Expense?.Date.ToString("dd MMM yyyy")</div>
                @if (Expense?.Category != null)
                {
                    <div class="small mt-1" style="color:@(Expense.Category.ColorCode ?? "#000")">
                        @($"{Expense.Category.Icon} {Expense.Category.Name}".Trim())
                    </div>
                }
            </div>
            <div class="fw-bold">$@((Expense?.Amount ?? 0m).ToString("N2"))</div>
        </div>

        @if (ShowActions && Expense != null)
        {
            <div class="mt-3 d-flex gap-2">
                <NavLink class="btn btn-sm btn-outline-primary" href="@($"/expenses/edit/{Expense.Id}")">Edit</NavLink>
                <NavLink class="btn btn-sm btn-outline-secondary" href="@($"/expenses/{Expense.Id}")">Details</NavLink>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public Expense? Expense { get; set; }
    [Parameter] public bool ShowActions { get; set; } = true;
}