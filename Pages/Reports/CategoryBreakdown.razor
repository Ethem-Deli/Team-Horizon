@page "/reports/category"

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using Microsoft.EntityFrameworkCore
@using FamilyBudgetExpenseTracker.Data
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Services

@inject ApplicationDbContext DbContext
@inject UserState UserState
@inject NavigationManager Navigation

<h1>ðŸ¥§ Expense Breakdown by Category</h1>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="row mb-3">
    <div class="col-md-3">
        <select @bind="selectedMonth" class="form-control">
            <option value="0">All Time</option>
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select @bind="selectedYear" class="form-control" disabled="@(selectedMonth == 0)">
            @for (int year = DateTime.Today.Year; year >= DateTime.Today.Year - 5; year--)
            {
                <option value="@year">@year</option>
            }
        </select>
        @if (selectedMonth == 0)
        {
            <small class="text-muted">Year filter is used only when a month is selected.</small>
        }
    </div>

    <div class="col-md-3">
        <button @onclick="LoadReport" class="btn btn-primary" disabled="@loading">
            @(loading ? "Loading..." : "Load Report")
        </button>
    </div>
</div>

@if (categoryBreakdown == null)
{
    <p><em>Click Load Report to view breakdown</em></p>
}
else if (!categoryBreakdown.Any())
{
    <p>No expenses for this period.</p>
}
else
{
    var grandTotal = categoryBreakdown.Sum(x => x.Total);

    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Total</th>
                <th>Percentage</th>
                <th>Count</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in categoryBreakdown.OrderByDescending(x => x.Total))
            {
                var percentage = grandTotal > 0m ? (item.Total / grandTotal) * 100m : 0m;

                <tr>
                    <td style="color: @(item.ColorCode ?? "#000")">
                        @(item.Icon ?? "") @item.CategoryName
                    </td>

                    <td><strong>$@item.Total.ToString("N2")</strong></td>

                    <td>
                        <div class="progress">
                            <div class="progress-bar"
                                 style="width: @percentage%; background-color: @(item.ColorCode ?? "#000")">
                                @percentage.ToString("N0")%
                            </div>
                        </div>
                    </td>

                    <td>@item.Count transactions</td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td><strong>Total</strong></td>
                <td><strong>$@grandTotal.ToString("N2")</strong></td>
                <td></td>
                <td><strong>@categoryBreakdown.Sum(x => x.Count)</strong></td>
            </tr>
        </tfoot>
    </table>
}

@code {
    private int selectedMonth = 0;
    private int selectedYear = DateTime.Today.Year;

    private bool loading = false;
    private string? errorMessage;

    private List<CategoryBreakdownItem>? categoryBreakdown;

    private async Task LoadReport()
    {
        errorMessage = null;

        // SECURITY: Must have a valid logged-in user to run any report queries.
        if (UserState.CurrentUserId <= 0)
        {
            Navigation.NavigateTo("/account/login");
            return;
        }

        loading = true;

        try
        {
            // SECURITY: Always filter by UserId so reports only include the current user's data.
            IQueryable<Expense> query = DbContext.Expenses
                .AsNoTracking()
                .Include(e => e.Category)
                .Where(e => e.UserId == UserState.CurrentUserId);

            // Important logic:
            // If selectedMonth == 0 => All Time (no date filter).
            // If selectedMonth > 0 => filter by selected month/year.
            if (selectedMonth > 0)
            {
                var startDate = new DateTime(selectedYear, selectedMonth, 1);
                var endDate = startDate.AddMonths(1);

                query = query.Where(e => e.Date >= startDate && e.Date < endDate);
            }

            var expenses = await query.ToListAsync();

            // Important logic:
            // Group by CategoryId (nullable possible), then compute totals and counts per group.
            categoryBreakdown = expenses
                .GroupBy(e => e.CategoryId)
                .Select(g =>
                {
                    var first = g.FirstOrDefault();
                    var cat = first?.Category;

                    return new CategoryBreakdownItem
                    {
                        CategoryId = g.Key,
                        CategoryName = cat?.Name ?? "Uncategorized",
                        Icon = cat?.Icon ?? "",
                        ColorCode = cat?.ColorCode ?? "#000",
                        Total = g.Sum(e => e.Amount),
                        Count = g.Count()
                    };
                })
                .ToList();
        }
        catch
        {
            // Friendly error message; do not expose stack traces or DB details.
            errorMessage = "Could not load the report. Please try again.";
            categoryBreakdown = new List<CategoryBreakdownItem>();
        }
        finally
        {
            loading = false;
        }
    }

    private class CategoryBreakdownItem
    {
        public int? CategoryId { get; set; }
        public string CategoryName { get; set; } = "Uncategorized";
        public string Icon { get; set; } = "";
        public string ColorCode { get; set; } = "#000";
        public decimal Total { get; set; }
        public int Count { get; set; }
    }
}