@page "/reports/category"
@using Microsoft.EntityFrameworkCore
@using System.ComponentModel.DataAnnotations
@inject ApplicationDbContext DbContext
@inject UserState UserState

<h1>🥧 Expense Breakdown by Category</h1>

<EditForm Model="filter" OnValidSubmit="LoadReport">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger small" />

    <div class="row mb-3">
        <div class="col-md-3">
            <InputSelect @bind-Value="filter.Month" class="form-control">
                <option value="0">All Time</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => filter.Month)" />
        </div>

        <div class="col-md-3">
            <InputSelect @bind-Value="filter.Year" class="form-control">
                @for (int year = DateTime.Today.Year; year >= DateTime.Today.Year - 5; year--)
                {
                    <option value="@year">@year</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => filter.Year)" />
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Load Report</button>
        </div>
    </div>
</EditForm>

@if (categoryBreakdown == null)
{
    <p><em>Click Load Report to view breakdown</em></p>
}
else if (!categoryBreakdown.Any())
{
    <p>No expenses for this period.</p>
}
else
{
    var grandTotal = categoryBreakdown.Sum(x => x.Total);

    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Total</th>
                <th>Percentage</th>
                <th>Count</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in categoryBreakdown.OrderByDescending(x => x.Total))
            {
                var percentage = grandTotal > 0m ? (item.Total / grandTotal) * 100m : 0m;

                <tr>
                    <td style="color: @(item.ColorCode ?? "#000")">
                        @(item.Icon ?? "") @item.CategoryName
                    </td>

                    <td><strong>$@item.Total.ToString("N2")</strong></td>

                    <td>
                        <div class="progress">
                            <div class="progress-bar"
                                style="width: @percentage%; background-color: @(item.ColorCode ?? "#000")">
                                @percentage.ToString("N0")%
                            </div>
                        </div>
                    </td>

                    <td>@item.Count transactions</td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td><strong>Total</strong></td>
                <td><strong>$@grandTotal.ToString("N2")</strong></td>
                <td></td>
                <td><strong>@categoryBreakdown.Sum(x => x.Count)</strong></td>
            </tr>
        </tfoot>
    </table>
}

@code {
    private readonly CategoryBreakdownFilterModel filter = new()
    {
        Month = 0,
        Year = DateTime.Today.Year
    };

    private List<CategoryBreakdownItem>? categoryBreakdown;

    private async Task LoadReport()
    {
        IQueryable<Expense> query = DbContext.Expenses
            .Include(e => e.Category)
            .Where(e => e.UserId == UserState.CurrentUserId);

        if (filter.Month > 0)
        {
            var startDate = new DateTime(filter.Year, filter.Month, 1);
            var endDate = startDate.AddMonths(1);
            query = query.Where(e => e.Date >= startDate && e.Date < endDate);
        }

        var expenses = await query.ToListAsync();

        categoryBreakdown = expenses
            .GroupBy(e => e.CategoryId)
            .Select(g =>
            {
                var first = g.FirstOrDefault();
                var cat = first?.Category;

                return new CategoryBreakdownItem
                {
                    CategoryId = g.Key,
                    CategoryName = cat?.Name ?? "Uncategorized",
                    Icon = cat?.Icon ?? "",
                    ColorCode = cat?.ColorCode ?? "#000",
                    Total = g.Sum(e => e.Amount),
                    Count = g.Count()
                };
            })
            .ToList();
    }

    private sealed class CategoryBreakdownFilterModel
    {
        [Range(0, 12, ErrorMessage = "Select a valid month.")]
        public int Month { get; set; }

        [Range(2000, 2100, ErrorMessage = "Select a valid year.")]
        public int Year { get; set; }
    }

    private sealed class CategoryBreakdownItem
    {
        public int CategoryId { get; set; }
        public string CategoryName { get; set; } = "Uncategorized";
        public string Icon { get; set; } = string.Empty;
        public string ColorCode { get; set; } = "#000";
        public decimal Total { get; set; }
        public int Count { get; set; }
    }
}
