@page "/expenses/create"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using Microsoft.EntityFrameworkCore
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Services
@inject ApplicationDbContext DbContext
@inject UserState UserState
@inject NavigationManager NavManager

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">âž• Add Expense</h3>

                    @if (categories == null)
                    {
                        <p><em>Loading categories...</em></p>
                    }
                    else if (!categories.Any())
                    {
                        <div class="alert alert-warning">
                            <p>You haven't created any categories yet! You need at least one category to record an expense.</p>
                            <a href="/categories/create" class="btn btn-warning btn-sm">Create First Category</a>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="expense" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger small" />

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <InputText @bind-Value="expense.Description" class="form-control" placeholder="e.g., Grocery shopping" />
                                <ValidationMessage For="@(() => expense.Description)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Amount ($)</label>
                                <InputNumber @bind-Value="expense.Amount" class="form-control" />
                                <ValidationMessage For="@(() => expense.Amount)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Date</label>
                                <InputDate @bind-Value="expense.Date" class="form-control" />
                                <ValidationMessage For="@(() => expense.Date)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <InputSelect @bind-Value="expense.CategoryId" class="form-control">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var cat in categories)
                                    {
                                        <option value="@cat.Id">@cat.Icon @cat.Name</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => expense.CategoryId)" />
                            </div>

                            <div class="d-flex gap-2 pt-3">
                                <button type="submit" class="btn btn-primary px-4">Save Expense</button>
                                <a href="/expenses" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Expense expense = new() { Date = DateTime.Today };
    private List<Category>? categories;

    protected override async Task OnInitializedAsync()
    {
        // 1. Fetch categories specific to this user
        categories = await DbContext.Categories
            .Where(c => c.UserId == UserState.CurrentUserId)
            .OrderBy(c => c.Name)
            .ToListAsync();

        // 2. Pre-select the first category if available
        if (categories.Any())
        {
            expense.CategoryId = categories.First().Id;
        }
    }

    private async Task HandleSubmit()
    {
        try 
        {
            // Ensure the UserId is set before saving
            expense.UserId = UserState.CurrentUserId;

            DbContext.Expenses.Add(expense);
            await DbContext.SaveChangesAsync();
            
            NavManager.NavigateTo("/expenses");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving expense: {ex.Message}");
        }
    }
}