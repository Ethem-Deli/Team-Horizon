@page "/budgets/create"
@inject ApplicationDbContext DbContext
@inject UserState UserState
@inject NavigationManager Navigation

<PageTitle>Set Budget</PageTitle>

<h1>ðŸ“Š Set New Budget</h1>

<EditForm Model="@budget" OnValidSubmit="HandleSubmit">
    <div class="mb-3">
        <label>Month:</label>
        <InputSelect @bind-Value="budget.Month" class="form-control">
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label>Year:</label>
        <InputNumber @bind-Value="budget.Year" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Budget Amount:</label>
        <InputNumber @bind-Value="budget.Amount" class="form-control" />
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/budgets" class="btn btn-secondary">Cancel</a>
    </div>
</EditForm>

@code {
    private Budget budget = new Budget
    {
        Month = DateTime.Today.Month,
        Year = DateTime.Today.Year
    };

    private async Task HandleSubmit()
    {
        budget.UserId = UserState.CurrentUserId;
        DbContext.Budgets.Add(budget);
        await DbContext.SaveChangesAsync();
        Navigation.NavigateTo("/budgets");
    }
}