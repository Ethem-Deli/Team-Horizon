@page "/budgets"

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Services

@inject IBudgetService BudgetService
@inject IExpenseService ExpenseService
@inject UserState UserState
@inject NavigationManager Navigation

<PageTitle>Budgets</PageTitle>

<h1>üìä Budgets</h1>

<div class="mb-3">
    <a href="/budgets/create" class="btn btn-primary">‚ûï Set New Budget</a>
</div>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (loading)
{
    <p><em>Loading...</em></p>
}
else if (budgets == null || !budgets.Any())
{
    <p>No budgets set. <a href="/budgets/create">Create your first budget</a></p>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Period</th>
                    <th>Budget Amount</th>
                    <th>Actual Spent</th>
                    <th>Remaining</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var budget in budgets)
                {
                    // Important logic: for each budget month, show total spent and remaining.
                    var spent = GetSpentAmount(budget);
                    var remaining = budget.Amount - spent;

                    // Avoid divide-by-zero when calculating usage percentage.
                    var percentage = budget.Amount <= 0 ? 0 : (spent / budget.Amount) * 100;

                    <tr>
                        <td>@GetMonthName(budget.Month) @budget.Year</td>
                        <td>$@budget.Amount.ToString("N2")</td>
                        <td>$@spent.ToString("N2")</td>
                        <td>$@remaining.ToString("N2")</td>
                        <td>
                            @if (percentage < 80)
                            {
                                <span class="badge bg-success">On Track</span>
                            }
                            else if (percentage < 100)
                            {
                                <span class="badge bg-warning">Warning</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Over Budget</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="/budgets/edit/@budget.Id">
                                ‚úèÔ∏è Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Budget>? budgets;
    private Dictionary<int, decimal> spentAmounts = new();

    private bool loading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        errorMessage = null;

        // SECURITY: Must have a valid logged-in user before loading any budgets.
        if (UserState.CurrentUserId <= 0)
        {
            Navigation.NavigateTo("/account/login");
            return;
        }

        try
        {
            // SECURITY: Service enforces user isolation by filtering budgets by UserId.
            budgets = await BudgetService.GetUserBudgetsAsync(UserState.CurrentUserId);

            // Important logic:
            // For each budget period, compute "spent" using ExpenseService for the same user.
            spentAmounts.Clear();

            foreach (var budget in budgets)
            {
                var startDate = new DateTime(budget.Year, budget.Month, 1);

                // SECURITY: ExpenseService totals are filtered by UserId.
                var totalSpent = await ExpenseService.GetTotalExpensesForMonthAsync(UserState.CurrentUserId, startDate);
                spentAmounts[budget.Id] = totalSpent;
            }
        }
        catch
        {
            // Friendly error message (do not expose exception details).
            errorMessage = "Could not load budgets. Please refresh and try again.";
            budgets = new List<Budget>();
        }
        finally
        {
            loading = false;
        }
    }

    private decimal GetSpentAmount(Budget budget)
    {
        // Safe default if a budget id is missing from dictionary.
        return spentAmounts.GetValueOrDefault(budget.Id, 0);
    }

    private string GetMonthName(int month)
    {
        // Converts numeric month (1-12) into a readable month name.
        return new DateTime(2000, month, 1).ToString("MMMM");
    }
}