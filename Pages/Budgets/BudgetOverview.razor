@page "/budgets/overview"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Services

@attribute [Authorize]

@inject IBudgetService BudgetService
@inject IExpenseService ExpenseService
@inject UserState UserState
@inject NavigationManager Navigation

<PageTitle>Budget Overview</PageTitle>

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="m-0">ðŸ“ˆ Budget Overview</h2>
        <NavLink href="/budgets" class="btn btn-outline-secondary btn-sm">Back</NavLink>
    </div>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (loading)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="row g-3">
            <div class="col-12 col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">This Month</h5>
                        <div class="small text-muted mb-3">@currentPeriodLabel</div>

                        <div class="d-flex justify-content-between">
                            <span>Budget</span>
                            <strong>$@thisMonthBudget.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Spent</span>
                            <strong>$@thisMonthSpent.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Remaining</span>
                            <strong>$@thisMonthRemaining.ToString("N2")</strong>
                        </div>

                        <div class="mt-3">
                            <span class="me-2">Status:</span>
                            @if (thisMonthBudget <= 0)
                            {
                                <span class="badge bg-secondary">No Budget Set</span>
                            }
                            else if (thisMonthPercent < 80)
                            {
                                <span class="badge bg-success">On Track</span>
                            }
                            else if (thisMonthPercent < 100)
                            {
                                <span class="badge bg-warning">Warning</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Over Budget</span>
                            }
                        </div>

                        <div class="mt-3">
                            <NavLink class="btn btn-primary" href="/budgets/create">Set / Update Budget</NavLink>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">Year-to-Date</h5>
                        <div class="small text-muted mb-3">@yearLabel</div>

                        <div class="d-flex justify-content-between">
                            <span>Total Budgets</span>
                            <strong>$@ytdBudgetTotal.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Total Spent</span>
                            <strong>$@ytdSpentTotal.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Remaining</span>
                            <strong>$@ytdRemainingTotal.ToString("N2")</strong>
                        </div>

                        <div class="mt-3">
                            <span class="me-2">Usage:</span>
                            <strong>@ytdPercent.ToString("N1")%</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">Quick Links</h5>
                        <div class="d-flex flex-wrap gap-2">
                            <NavLink href="/budgets" class="btn btn-outline-primary">ðŸ“Š Budgets List</NavLink>
                            <NavLink href="/budgets/create" class="btn btn-outline-primary">âž• Create Budget</NavLink>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool loading = true;
    private string? errorMessage;

    private string currentPeriodLabel = "";
    private string yearLabel = "";

    private decimal thisMonthBudget = 0m;
    private decimal thisMonthSpent = 0m;
    private decimal thisMonthRemaining = 0m;
    private decimal thisMonthPercent = 0m;

    private decimal ytdBudgetTotal = 0m;
    private decimal ytdSpentTotal = 0m;
    private decimal ytdRemainingTotal = 0m;
    private decimal ytdPercent = 0m;

    protected override async Task OnInitializedAsync()
    {
        if (UserState.CurrentUserId <= 0)
        {
            Navigation.NavigateTo("/account/login");
            return;
        }

        try
        {
            var now = DateTime.Today;
            currentPeriodLabel = $"{now:MMMM yyyy}";
            yearLabel = $"{now:yyyy}";

            // Load all budgets for user
            var budgets = await BudgetService.GetUserBudgetsAsync(UserState.CurrentUserId);

            // This month budget (if exists)
            var thisBudget = budgets.FirstOrDefault(b => b.Year == now.Year && b.Month == now.Month);
            thisMonthBudget = thisBudget?.Amount ?? 0m;

            // This month spent
            var monthStart = new DateTime(now.Year, now.Month, 1);
            thisMonthSpent = await ExpenseService.GetTotalExpensesForMonthAsync(UserState.CurrentUserId, monthStart);

            thisMonthRemaining = thisMonthBudget - thisMonthSpent;
            thisMonthPercent = thisMonthBudget <= 0 ? 0 : (thisMonthSpent / thisMonthBudget) * 100m;

            // YTD totals (sum budgets within year)
            var ytdBudgets = budgets.Where(b => b.Year == now.Year).ToList();
            ytdBudgetTotal = ytdBudgets.Sum(b => b.Amount);

            // YTD spent: sum each month (safe and simple)
            ytdSpentTotal = 0m;
            for (int m = 1; m <= now.Month; m++)
            {
                var start = new DateTime(now.Year, m, 1);
                ytdSpentTotal += await ExpenseService.GetTotalExpensesForMonthAsync(UserState.CurrentUserId, start);
            }

            ytdRemainingTotal = ytdBudgetTotal - ytdSpentTotal;
            ytdPercent = ytdBudgetTotal <= 0 ? 0 : (ytdSpentTotal / ytdBudgetTotal) * 100m;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}