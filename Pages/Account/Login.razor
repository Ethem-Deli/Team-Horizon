@page "/login"
@using Microsoft.AspNetCore.WebUtilities

@using FamilyBudgetExpenseTracker.Services
@inject IAuthService AuthService
@inject NavigationManager NavManager

@code{
    private bool isRegistered;

    protected override void OnInitialized()
    {
        var uri = NavManager.ToAbsoluteUri(NavManager.Uri);

        if (QueryHelpers.ParseQuery(uri.Query)
            .TryGetValue("registered", out var value)
            && value == "true")
        {
            isRegistered = true;
        }
    }

}

<div class="container py-5  min-vh-100">
    <div class="row justify-content-center">        
        <div class="col-md-4 offset-md-4">
            <div class="card shadow border-0 mt-5">
                <div class="card-body p-4">             
                    @if (isRegistered)
                    {
                        <div class="alert alert-success text-center mb-3">
                            âœ… Registration successful! Please log in.
                        </div>
                    }

       
                    <h2 class="text-center mb-4">Login</h2>

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input @bind="username" class="form-control" placeholder="Username" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" @bind="password" class="form-control" placeholder="Password" />
                    </div>

                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger py-2">@error</div>
                    }

                    @* The UI now simply calls the service *@
                    <button @onclick="HandleLogin" class="btn btn-primary w-100 py-2" disabled="@isProcessing">
                        @(isProcessing ? "Verifying..." : "Sign In")
                    </button>

                    <div class="text-center mt-3">
                        <small>Need an account? <a href="/register" class="text-decoration-none">Register
                            here</a></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@code {
    private string username = "";
    private string password = "";
    private string? error;
    private bool isProcessing;

    private async Task HandleLogin()
    {
        if (isProcessing) return;

        error = null;
        isProcessing = true;

        try
        {
            // Call the service instead of doing DB work here
            var user = await AuthService.LoginAsync(username, password);

            if (user != null)
            {
                NavManager.NavigateTo("/");
            }
            else
            {
                error = "Invalid username or password.";
            }
        }
        catch (Exception)
        {
            error = "A system error occurred. Please try again later.";
        }
        finally
        {
            isProcessing = false;
        }
    }
}