@page "/login"
@using FamilyBudgetExpenseTracker.Data
@using FamilyBudgetExpenseTracker.Services
@using FamilyBudgetExpenseTracker.Security
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject UserState UserState
@inject NavigationManager NavManager

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            @if (isRegistered)
            {
                <div class="alert alert-success">Registration successful! Please login.</div>
            }

            <div class="card shadow border-0 mt-5">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Login</h2>

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input @bind="username" class="form-control" placeholder="Username" @bind:event="oninput" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" @bind="password" class="form-control" placeholder="Password"
                               @bind:event="oninput" />
                    </div>

                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger py-2">@error</div>
                    }

                    @* Button is disabled while processing to prevent the double-click/double-SELECT you saw in your logs *@
                    <button @onclick="HandleLogin" class="btn btn-primary w-100 py-2" disabled="@isProcessing">
                        @(isProcessing ? "Verifying..." : "Sign In")
                    </button>

                    <div class="text-center mt-3">
                        <small>Need an account? <a href="/register" class="text-decoration-none">Register
                            here</a></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@code {
    private string username = "";
    private string password = "";
    private string? error;
    private bool isRegistered;
    private bool isProcessing;

    protected override void OnInitialized()
    {
        var uri = NavManager.ToAbsoluteUri(NavManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).ContainsKey("registered"))
        {
            isRegistered = true;
        }
    }

    private async Task HandleLogin()
    {
        if (isProcessing) return;

        error = null;
        isProcessing = true;

        try
        {
            if (string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password))
            {
                error = "Please enter both credentials.";
                isProcessing = false;
                return;
            }

            // 1. Fetch user (This part is working in your logs)
            var user = await DbContext.Users.FirstOrDefaultAsync(u => u.Username.ToLower() == username.ToLower());

            // 2. Verify password
            if (user != null && PasswordHasher.Verify(password, user.PasswordHash))
            {
                // 3. Set Global State
                UserState.Login(user);

                // 4. Navigate (Ensuring variable name matches the @inject above)
                NavManager.NavigateTo("/");
            }
            else
            {
                error = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            error = "A system error occurred during login.";
            Console.WriteLine($"LOGIN CRASH: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
        }
    }
}