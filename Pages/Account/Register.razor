@page "/register"
@using FamilyBudgetExpenseTracker.Data
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Services
@using Microsoft.EntityFrameworkCore
@using System.ComponentModel.DataAnnotations
@using FamilyBudgetExpenseTracker.Security
@inject ApplicationDbContext DbContext
@inject NavigationManager NavManager

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Create Account</h2>

                    <EditForm Model="regModel" OnValidSubmit="HandleRegister">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <InputText @bind-Value="regModel.FullName" class="form-control"
                                       placeholder="Enter your full name" />
                            <ValidationMessage For="@(() => regModel.FullName)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="regModel.Email" class="form-control"
                                       placeholder="you@example.com" />
                            <ValidationMessage For="@(() => regModel.Email)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <InputText @bind-Value="regModel.Username" class="form-control" />
                            <ValidationMessage For="@(() => regModel.Username)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <InputText @bind-Value="regModel.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => regModel.Password)" class="text-danger" />
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <button type="submit" class="btn btn-primary w-100 py-2 mt-2">Sign Up</button>
                    </EditForm>

                    <div class="text-center mt-3">
                        <p class="text-muted">Already have an account? <a href="/login"
                                                                              class="text-decoration-none">Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@code {
    private RegisterViewModel regModel = new();
    private string? errorMessage;

    private async Task HandleRegister()
    {
        errorMessage = null;
        try
        {
            // Check if user already exists
            var userExists = await DbContext.Users.AnyAsync(u =>
                u.Username.ToLower() == regModel.Username.ToLower() ||
                u.Email.ToLower() == regModel.Email.ToLower());

            if (userExists)
            {
                errorMessage = "Username or Email is already registered.";
                return;
            }

            // Map ViewModel to the User Model provided in context
            var newUser = new User
            {
                FullName = regModel.FullName,
                Email = regModel.Email,
                Username = regModel.Username,
                PasswordHash = PasswordHasher.HashPassword(regModel.Password), // Using the hashing service
                CreatedAt = DateTime.UtcNow
            };

            DbContext.Users.Add(newUser);
            await DbContext.SaveChangesAsync();

            // Redirect to login with a success indicator
            NavManager.NavigateTo("/login?registered=true");
        }
        catch (Exception ex)
        {
            errorMessage = "Registration failed. Please try again.";
            Console.WriteLine($"Register Error: {ex.Message}");
        }
    }

}