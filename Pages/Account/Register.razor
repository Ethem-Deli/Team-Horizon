@page "/register"
@using FamilyBudgetExpenseTracker.Data
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Models.ViewModels
@using FamilyBudgetExpenseTracker.Services
@using FamilyBudgetExpenseTracker.Security
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using Microsoft.EntityFrameworkCore
@inject IAuthService AuthService
@inject ApplicationDbContext DbContext
@inject NavigationManager NavManager

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 offset-md-3">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Create Account</h2>

                    <EditForm Model="regModel" OnValidSubmit="HandleRegister">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <InputText @bind-Value="regModel.FullName" class="form-control" />
                            <ValidationMessage For="@(() => regModel.FullName)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="regModel.Email" class="form-control" />
                            <ValidationMessage For="@(() => regModel.Email)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <InputText @bind-Value="regModel.Username" class="form-control" />
                            <ValidationMessage For="@(() => regModel.Username)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <InputText @bind-Value="regModel.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => regModel.Password)" class="text-danger" />
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger py-2 small">@errorMessage</div>
                        }

                        <button type="submit" class="btn btn-primary w-100 py-2 mt-2">Sign Up</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterViewModel regModel = new();
    private string? errorMessage;

    private async Task HandleRegister()
    {
        errorMessage = null;

        // Specific Feedback: Check if account exists before attempting to create
        bool alreadyRegistered = await AuthService.UserExistsAsync(regModel.Username, regModel.Email);

        if (alreadyRegistered)
        {
            errorMessage = "This username or email is already registered. Try logging in instead.";
            return;
        }

        try
        {
            var newUser = new User
            {
                FullName = regModel.FullName,
                Email = regModel.Email,
                Username = regModel.Username,
                PasswordHash = PasswordHasher.HashPassword(regModel.Password),
                CreatedAt = DateTime.UtcNow
            };

            DbContext.Users.Add(newUser);
            await DbContext.SaveChangesAsync();

            NavManager.NavigateTo("/login?registered=true");
        }
        catch (Exception)
        {
            errorMessage = "An error occurred while creating your account. Please try again.";
        }
    }


}