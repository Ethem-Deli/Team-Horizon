@page "/categories/edit/{Id:int}"
@using FamilyBudgetExpenseTracker.Models
@using FamilyBudgetExpenseTracker.Services
@inject ICategoryService CategoryService
@inject UserState UserState
@inject NavigationManager NavManager

<PageTitle>Edit Category</PageTitle>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">‚úèÔ∏è Edit Category</h3>

                    @if (category == null)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Loading category details...</p>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@category" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger small" />

                            <div class="mb-3">
                                <label class="form-label fw-bold">Name</label>
                                <InputText @bind-Value="category.Name" class="form-control" placeholder="e.g., Groceries" />
                                <ValidationMessage For="@(() => category.Name)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Description</label>
                                <InputTextArea @bind-Value="category.Description" class="form-control" rows="2"
                                               placeholder="Optional notes about this category" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Icon</label>
                                    <div class="input-group">
                                        <InputText @bind-Value="category.Icon" class="form-control"
                                                   placeholder="e.g., üõí" />
                                        <span class="input-group-text bg-white">@category.Icon</span>
                                    </div>
                                    <small class="text-muted">Use any emoji</small>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Color Theme</label>
                                    <input type="color" @bind="category.ColorCode"
                                           class="form-control form-control-color w-100" />
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <div class="d-flex gap-2 pt-3">
                                <button type="submit" class="btn btn-primary px-4" disabled="@isSaving">
                                    @(isSaving ? "Saving..." : "Update Category")
                                </button>
                                <a href="/categories" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Category? category;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Load the specific category for the current user
        category = await CategoryService.GetCategoryByIdAsync(Id, UserState.CurrentUserId);

        if (category == null)
        {
            // If category doesn't exist or belongs to another user, redirect
            NavManager.NavigateTo("/categories");
        }
    }

    private async Task HandleSubmit()
    {
        if (category == null || isSaving) return;

        isSaving = true;
        errorMessage = null;

        var success = await CategoryService.UpdateCategoryAsync(category, UserState.CurrentUserId);

        if (success)
        {
            NavManager.NavigateTo("/categories");
        }
        else
        {
            errorMessage = "Could not update category. It may have been deleted or moved.";
            isSaving = false;
        }
    }
}